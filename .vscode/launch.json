{
  "version": "0.2.0",
  "configurations": [
    // Run after rebuilding for Windows.
    {
      "name": "Windows Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "preLaunchTask": "${defaultBuildTask}",
      "program": "${workspaceFolder}/build/rainfall-c.exe",
      "cwd": "${workspaceFolder}",
      "args": ["-d", "res", "c", "TestPackage"],
      "environment": [],
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },

    // Run after rebuilding for Linux.
    {
      "name": "Linux Launch",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "${defaultBuildTask}",
      "program": "${workspaceFolder}/build/rainfall-c",
      "cwd": "${workspaceFolder}",
      "args": ["-d", "res", "c", "TestPackage"],
      "environment": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb"
    }
  ]
}
